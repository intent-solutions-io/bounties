{
  "name": "@bounty-system/functions",
  "version": "0.1.0",
  "description": "Cloud Functions for bounty system webhooks",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "deploy": "gcloud functions deploy github-webhook --gen2 --runtime=nodejs20 --trigger-http --allow-unauthenticated --entry-point=githubWebhook --source=dist --region=us-central1",
    "deploy:all": "npm run build && npm run deploy",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@bounty-system/core": "workspace:*",
    "@google-cloud/firestore": "^7.0.0",
    "@google-cloud/functions-framework": "^3.3.0",
    "@octokit/webhooks": "^12.0.0",
    "@octokit/rest": "^20.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
