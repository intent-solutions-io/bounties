rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner() {
      return isAuthenticated() && request.auth.uid == resource.data.userId;
    }

    function isAdmin() {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Bounties - readable by all authenticated users, writable by admins
    match /bounties/{bountyId} {
      allow read: if isAuthenticated();
      allow create, update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Proofs - readable by authenticated, writable by admins or session owner
    match /proofs/{proofId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Domains - readable by all authenticated, writable by admins
    match /domains/{domainId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Ledger - financial records, admin only
    match /ledger/{entryId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // Sessions - work sessions, owner or admin access
    match /sessions/{sessionId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() &&
        (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }

    // Activity log - append only for authenticated, read by admin
    match /activity/{activityId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if false; // Immutable
    }

    // Config - admin only
    match /config/{configId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Admins collection - bootstrap and admin management
    match /admins/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}
