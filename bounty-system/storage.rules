rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Proof recordings and screenshots
    match /proofs/{bountyId}/{allPaths=**} {
      // Authenticated users can read proofs
      allow read: if request.auth != null;
      // Only authenticated users can upload
      allow write: if request.auth != null
        && request.resource.size < 100 * 1024 * 1024; // 100MB max
    }

    // Session recordings
    match /sessions/{sessionId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.size < 50 * 1024 * 1024; // 50MB max
    }

    // Public proof assets (for proof wall)
    match /public/{bountyId}/{allPaths=**} {
      allow read: if true; // Public access
      allow write: if request.auth != null; // Auth required to upload
    }
  }
}
