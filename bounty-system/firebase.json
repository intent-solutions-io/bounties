{
  "firestore": {
    "rules": "firestore/firestore.rules",
    "indexes": "firestore/firestore.indexes.json"
  },
  "hosting": {
    "public": "apps/dashboard/public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "run": { "serviceId": "bounty-dashboard", "region": "us-central1" }
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
